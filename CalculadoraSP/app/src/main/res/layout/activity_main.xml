<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="6dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_proceso"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:textSize="40sp"
            android:gravity="end|center"
            android:background="@drawable/rec_borde"
            android:elevation="8dp"/>

        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:gravity="end|center"
            android:background="@drawable/rec_borde"
            android:shadowColor="#000000"
            android:elevation="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/btn_historial"
                    android:contentDescription="Bot贸n de historial"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="30sp"
                    android:background="@color/claro"
                    android:drawableEnd="@drawable/ic_historial"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_convertidor"
                    android:contentDescription="Bot贸n de conversion"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="30sp"
                    android:background="@color/claro"
                    android:drawableEnd="@drawable/ic_conversion"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/btn_rotar"
                    android:contentDescription="Bot贸n de rotar pantalla"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="30sp"
                    android:background="@color/claro"
                    android:drawableEnd="@drawable/ic_rotar"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_borrar"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:paddingEnd="30sp"
                    android:layout_height="match_parent"
                    android:background="@color/claro"
                    android:contentDescription="Bot贸n de borrar"
                    android:drawableEnd="@drawable/ic_eliminar"
                    android:onClick="borrar"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btn_limpiar"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:onClick="limpiar"
                    android:text="C"
                    android:layout_margin="5dp"
                    android:textColor="@color/red"
                    android:background="@drawable/rec_botones"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_parentesis"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="()"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_porcentaje"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_division"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="/"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btn_siete"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_ocho"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_nueve"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_multiplicacion"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btn_cuatro"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="4"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_cicno"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_seis"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_restar"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btn_uno"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_dos"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_tres"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_suma"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rec_botones"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btn_masMenos"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_cero"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_punto"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                <Button
                    android:id="@+id/btn_igual"
                    android:layout_width="90dp"
                    android:layout_margin="5dp"
                    android:onClick="Resultado_final"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textColor="@color/white"
                    android:background="@drawable/rec_botones"
                    android:textSize="30sp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>


            </LinearLayout>



    </LinearLayout>




</LinearLayout>